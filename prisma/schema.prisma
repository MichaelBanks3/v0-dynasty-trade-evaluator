generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // <-- add this
}

enum Position {
  QB
  RB
  WR
  TE
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  position  Position
  team      String
  value     Int
  createdAt DateTime @default(now())
}

model User {
  id        String   @id // Clerk userId (e.g., "user_123")
  email     String?  @unique
  createdAt DateTime @default(now())
  trades    Trade[]
}

model Trade {
  id         String   @id @default(uuid())
  userId     String?
  createdAt  DateTime @default(now())
  teamAIds   Json
  teamBIds   Json
  totalA     Int
  totalB     Int
  verdict    String
  diff       Int

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}